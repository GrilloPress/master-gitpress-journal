---
pageable: true
per_page: 12
---
<p class="lead">Articles tagged '<%= tagname %>'</p>




  <% page_articles.each_with_index do |article, i| %>
  <article id="collection-<%= tagname %>-<%= article.slug %>">
    <%= article.summary(250) %>
    <%= link_to article.title, article %>
  </article>
  <% end %>

<nav>
  <ul class="pager">
    <% if paginate && num_pages > 1 %>
      <% if prev_page %>
        <li class="previous"><%= link_to 'Previous page', prev_page %></li>
      <% end %>
    <% end %>

    <% if paginate %>
      <% if next_page %>
        <li class="next"><%= link_to 'Next page', next_page %></li>
      <% end %>
    <% end %>
  </ul>
</nav>